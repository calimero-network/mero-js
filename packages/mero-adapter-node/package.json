{
  "name": "@mero/adapter-node",
  "version": "1.0.0",
  "description": "Node.js adapter for Mero.js SDK",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "private": true,
  "dependencies": {
    "@mero/core": "workspace:*"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting disabled during migration'",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "rimraf": "^3.0.0"
  },
  "keywords": [
    "mero",
    "node",
    "adapter",
    "sdk"
  ],
  "license": "MIT",
  "author": "Calimero Ltd"
}
