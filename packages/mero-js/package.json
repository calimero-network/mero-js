{
  "name": "@calimero-network/mero-js",
  "version": "1.0.0",
  "description": "Pure JavaScript SDK for Calimero",
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.19.34",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "rimraf": "^3.0.0",
    "typescript": "^4.9.5",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=neutral --target=es2020 --format=esm --outfile=lib/index.mjs && esbuild src/index.ts --bundle --platform=neutral --target=es2020 --format=cjs --outfile=lib/index.js",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "eslint": "eslint .",
    "typecheck": "tsc --noEmit",
    "tsc": "tsc -b",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "clean": "pnpm rimraf lib",
    "dev": "echo 'Mero.js package not yet implemented'"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "calimero",
    "mero",
    "javascript",
    "p2p",
    "blockchain",
    "sdk"
  ],
  "license": "(MIT)",
  "author": "Calimero Ltd",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
