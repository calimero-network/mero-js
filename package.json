{
  "name": "@calimero-network/mero-js-monorepo",
  "version": "1.0.0",
  "description": "Mero.js - Pure JavaScript SDK for Calimero (Monorepo)",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "pnpm -r eslint .",
    "lint:fix": "pnpm -r eslint . --fix",
    "format": "pnpm -r prettier --check .",
    "format:fix": "pnpm -r prettier --write .",
    "typecheck": "pnpm -r tsc",
    "build": "pnpm -r --filter @calimero-network/mero-js build",
    "test": "pnpm -r test",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^18.19.34",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "3.3.2",
    "typescript": "^4.9.5",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "calimero",
    "mero",
    "javascript",
    "p2p",
    "blockchain",
    "sdk",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Calimero Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/mero-js.git"
  },
  "bugs": {
    "url": "https://github.com/calimero-network/mero-js/issues"
  },
  "homepage": "https://github.com/calimero-network/mero-js#readme"
}
