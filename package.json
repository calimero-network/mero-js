{
  "name": "@calimero-network/mero-js-monorepo",
  "version": "1.0.0",
  "description": "Mero.js - Pure JavaScript SDK for Calimero (Monorepo)",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter='!@calimero-network/mero-js-*-example' build",
    "build:package": "pnpm --filter @calimero-network/mero-js build",
    "build:examples": "pnpm -r --filter='@calimero-network/mero-js-*-example' build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "install:all": "pnpm install",
    "example:browser": "pnpm --filter @calimero-network/mero-js-browser-example start",
    "example:node": "pnpm --filter @calimero-network/mero-js-node-example start",
    "example:universal": "pnpm --filter @calimero-network/mero-js-universal-example start",
    "example:all": "pnpm example:browser && pnpm example:node && pnpm example:universal"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/bn.js": "^5.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^18.19.34",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bundlewatch": "^0.3.1",
    "concurrently": "^7.3.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^26.0.1",
    "prettier": "3.3.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^24.2.0",
    "semver": "^7.6.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5",
    "typescript-eslint": "^7.13.0"
  },
  "keywords": [
    "calimero",
    "mero",
    "javascript",
    "p2p",
    "blockchain",
    "sdk",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Calimero Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/mero-js.git"
  },
  "bugs": {
    "url": "https://github.com/calimero-network/mero-js/issues"
  },
  "homepage": "https://github.com/calimero-network/mero-js#readme"
}
