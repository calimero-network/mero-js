{
  "name": "@calimero-network/mero-js-monorepo",
  "version": "1.0.0",
  "description": "Mero.js - Pure JavaScript SDK for Calimero (Monorepo)",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean",
    "lint:fix": "pnpm -r eslint . --fix",
    "format": "pnpm -r prettier --check .",
    "format:fix": "pnpm -r prettier --write .",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @calimero-network/mero-js test:e2e",
    "test:e2e:watch": "pnpm --filter @calimero-network/mero-js test:e2e:watch",
    "test:e2e:auth": "pnpm --filter @calimero-network/mero-js test:e2e:auth",
    "test:e2e:admin": "pnpm --filter @calimero-network/mero-js test:e2e:admin",
    "test:e2e:examples": "pnpm --filter @calimero-network/mero-js test:e2e:examples",
    "lint-staged": "lint-staged",
    "prepare": "run-p prepare:*",
    "prepare:husky": "husky",
    "prepare:merobox": "node ./scripts/install-merobox.mjs",
    "merobox": "node ./bin/merobox.cjs"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.19.34",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.2",
    "typescript": "^4.9.5",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "calimero",
    "mero",
    "javascript",
    "p2p",
    "blockchain",
    "sdk",
    "monorepo"
  ],
  "license": "MIT",
  "author": "Calimero Ltd",
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/mero-js.git"
  },
  "bugs": {
    "url": "https://github.com/calimero-network/mero-js/issues"
  },
  "homepage": "https://github.com/calimero-network/mero-js#readme"
}
